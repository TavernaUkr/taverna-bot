# Example .env file for Taverna Bot

# --- Telegram Bot ---
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
ADMIN_ID=123456789

# --- Channels ---
TEST_CHANNEL=@test_channel
MAIN_CHANNEL=@main_channel

# --- Telegram API (Telethon, optional) ---
TG_API_ID=
TG_API_HASH=
SESSION_NAME=
SUPPLIER_CHANNEL=
SUPPLIER_NAME=

# --- Nova Poshta API ---
NP_API_KEY=
NP_API_URL=

# --- MyDrop ---
MYDROP_API_KEY=
MYDROP_EXPORT_URL=https://backend.mydrop.com.ua/vendor/api/export/products/prom/yml?public_api_key=xxxx
MYDROP_ORDERS_URL=https://backend.mydrop.com.ua/dropshipper/api/orders
MYDROP_PRODUCTS_URL=https://mydrop.com.ua/wp-json/wc/v3/products

# --- Storage ---
# Render зберігає файли в /data (постійна пам’ять), локально можна лишити /tmp/orders
ORDERS_DIR=/data/orders

# --- Google Cloud Storage (optional) ---
USE_GCS=false
GCS_BUCKET=
SERVICE_ACCOUNT_JSON=

# --- Google Drive (optional) ---
USE_GDRIVE=false
GDRIVE_FOLDER_ID=

# --- Bot Mode ---
TEST_MODE=true
