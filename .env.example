# Example .env file for Taverna Bot

# --- Telegram Bot ---
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
ADMIN_ID=123456789

# --- Channels ---
TEST_CHANNEL=@test_channel
MAIN_CHANNEL=@main_channel

# --- Telegram API (Telethon, optional) ---
TG_API_ID=
TG_API_HASH=
SESSION_NAME=
SUPPLIER_CHANNEL=
SUPPLIER_NAME=

# --- Nova Poshta API ---
NP_API_KEY=
NP_API_URL=

# --- MyDrop (WooCommerce API) ---
MYDROP_PRODUCTS_URL=https://mydrop.com.ua/wp-json/wc/v3/products
MYDROP_CONSUMER_KEY=
MYDROP_CONSUMER_SECRET=

# --- MyDrop ---
MYDROP_API_KEY=
MYDROP_ORDERS_URL=

# --- Storage ---
ORDERS_DIR=/tmp/orders

# --- Google Cloud Storage (optional) ---
USE_GCS=
GCS_BUCKET=
SERVICE_ACCOUNT_JSON=

# --- Google Drive (optional) ---
USE_GDRIVE=
GDRIVE_FOLDER_ID=

# --- Bot Mode ---
TEST_MODE=true
